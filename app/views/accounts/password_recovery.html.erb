<div class="screen-content background-light-green">
  <section class="authenty password-recovery">
    <div class="section-content">
      <div class="wrap">
        <div class="container">
          <div class="form-wrap">
            <div class="row">
              <div class="col-xs-12 col-sm-3 animated fadeInUpBig">
                <h2>Grower's Notebook</h2>
                <p>Problems? Let's see if we can fix it</p>
              </div>
              <div class="col-sm-1 hidden-xs">
                <div class="horizontal-divider"></div>
              </div>
              <% if @recovery_mail_sent %>
                <div class="col-xs-12 col-sm-8 main animated fadeInLeft">
                  <h2>Check your Mailbox</h2>
                    <p>You should see a Reset Link from us soon. If it doesn't show up, peek in your Spam Folder.</p>
                  </div>
                </div>
              <% else %>
                <div class="col-xs-12 col-sm-8 main animated fadeInLeft">
                  <h2>Forgot your password?</h2>
                  <p>Not to worry. Just enter your email address below and we'll send you link to create a new one.</p>
                  <div class="form-main">
                    <%= form_tag "/accounts/password_recovery" do %>
                    <div class="form-group">
                      <input type="email" class="form-control" placeholder="Email" name="auth_key" required="required">
                    </div>
                    <div class="row">
                      <div class="col-xs-12 col-sm-4">
                        <h4><a href="/accounts/signin_page" class="signin-link">Try Again</a></h4>
                      </div>
                      <div class="col-xs-12 col-md-offset-4 col-sm-4">
                        <button type="submit" class="btn btn-block reset">Reset Password</button>
                      </div>
                    </div>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
